{
  "name": "my-ts-rollup-starter",
  "version": "1.0.0",
  "repository": "https://github.com/newbornfrontender/my-ts-rollup-starter.git",
  "author": "Infant Frontender <newbornfrontender@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-typescript": "^7.3.3",
    "@commitlint/config-conventional": "^8.1.0",
    "@types/jest": "^24.0.15",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "babel-jest": "^24.8.0",
    "commitlint": "^8.1.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-typescript": "^4.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.13.7",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.1",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.1",
    "postcss": "^7.0.17",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.7.0",
    "postcss-use": "^3.0.0",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "rollup": "^1.17.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-copy": "^3.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-terser": "^5.1.1",
    "stylelint": "^10.1.0",
    "stylelint-config-prettier": "^5.2.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-order": "^3.0.1",
    "stylelint-prettier": "^1.1.1",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "sirv-cli": "^0.4.4"
  },
  "scripts": {
    "format": "prettier --write **/*.{html,js,json,md} --ignore-path .gitignore",
    "typecheck": "tsc --noEmit",
    "lint:css": "stylelint --fix **/*.css --ignore-path .gitignore",
    "lint:css:check": "stylelint-config-prettier-check",
    "lint:ts": "eslint . --fix --ext ts --ignore-path .gitignore",
    "lint:ts:check": "eslint --print-config src/index.ts | eslint-config-prettier-check",
    "test": "jest",
    "serve": "sirv public -D",
    "start": "rollup -c -w",
    "build": "rollup -c"
  },
  "browserslist": [
    "last 1 chrome version"
  ],
  "prettier": {
    "printWidth": 100,
    "useTabs": false,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-prettier/recommended"
    ],
    "plugins": [
      "stylelint-order"
    ],
    "rules": {
      "order/properties-alphabetical-order": true
    }
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2019,
      "sourceType": "module"
    },
    "parser": "@typescript-eslint/parser",
    "env": {
      "es6": true,
      "browser": true,
      "jest": true
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "airbnb-typescript/base",
      "plugin:jest/all",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "babel-jest"
    }
  },
  "babel": {
    "presets": [
      "@babel/typescript",
      "@babel/env"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.css": [
      "stylelint --fix --ignore-path .gitignore",
      "git add"
    ],
    "*.ts": [
      "eslint --fix --ignore-path .gitignore",
      "git add"
    ],
    "*.{html,js,json,md}": [
      "prettier --write --ignore-path .gitignore",
      "git add"
    ]
  }
}
